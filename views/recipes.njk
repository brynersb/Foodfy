{% extends "layout.njk" %}

{% block head %}
         <title>Receitas - Foodfy</title>
{% endblock head %}

{% block content %}

    <div class="tittle-cards">
        <h4>Receitas</h4>
    </div>
 
    <section class="main_cards">
        {% for item in items %}   
            <div class="card"  id="{{item.id}}" name="{{item.title}}" name2="{{item.author}}">
                <div class="card-img" id="{{item.id}}">
                    <img src="{{item.image}}"alt="burger">
                </div>
                <div class="card-content">
                    <p>{{item.title}}</p>
                    <span>{{item.author}}</span>
                </div>
            </div>
        {% endfor %}
    </section>
  

    <script src="/scripts/script.js"></script>

{% endblock content %}